<body>
    <div class="container">
        <div class="envelope" id="envelope">
            </div>
        <div class="paper" id="paper">
            <h2>Beni seviyor musun?</h2>
            <div class="buttons">
                <button id="yesBtn">Evet</button>
                <button id="noBtn">HayÄ±r</button>
            </div>
        </div>
        <p class="love-message" id="loveMessage"></p>
    </div>

    <script>
        // HTML elemanlarÄ±nÄ± seÃ§me
        const envelope = document.getElementById('envelope');
        const paper = document.getElementById('paper');
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const loveMessage = document.getElementById('loveMessage');

        // Zarf tÄ±klama olayÄ±
        envelope.addEventListener('click', () => {
            // KaÄŸÄ±dÄ± gÃ¶rÃ¼nÃ¼r yap ve animasyonu tetikle
            paper.classList.add('visible');
            // ZarfÄ± biraz yukarÄ± hareket ettir (isteÄŸe baÄŸlÄ± estetik dokunuÅŸ)
            envelope.style.transform = 'translateY(-20px) scale(1.05)';
        });

        // "HayÄ±r" butonu fare Ã¼zerine gelince yer deÄŸiÅŸtirme olayÄ±
        noBtn.addEventListener('mouseover', (e) => {
            const btnRect = noBtn.getBoundingClientRect();
            const paperRect = paper.getBoundingClientRect();

            // Butonun merkez noktasÄ±
            const btnCenterX = btnRect.left + btnRect.width / 2;
            const btnCenterY = btnRect.top + btnRect.height / 2;

            // Fare (veya dokunma) pozisyonu
            const mouseX = e.clientX;
            const mouseY = e.clientY;

            // Fare ile buton merkezi arasÄ±ndaki fark
            const deltaX = mouseX - btnCenterX;
            const deltaY = mouseY - btnCenterY;

            // Butonun kaymasÄ± gereken minimum mesafe
            const escapeDistance = 80; // Butonun ne kadar uzakta olacaÄŸÄ±

            // Hareket yÃ¶nÃ¼nÃ¼ belirle ve minimum mesafe kadar uzaÄŸa git
            let newX = btnRect.left - paperRect.left; // Paper iÃ§indeki gÃ¶receli X
            let newY = btnRect.top - paperRect.top;   // Paper iÃ§indeki gÃ¶receli Y

            // Fare butona yakÄ±nsa veya Ã¼zerindeyse hareket et
            if (Math.abs(deltaX) < escapeDistance && Math.abs(deltaY) < escapeDistance) {
                // Rastgele bir aÃ§Ä± seÃ§ (0-360 derece)
                const angle = Math.random() * Math.PI * 2;
                // Yeni konumu escapeDistance kadar uzakta belirle
                newX = (btnRect.width / 2) + Math.cos(angle) * escapeDistance;
                newY = (btnRect.height / 2) + Math.sin(angle) * escapeDistance;

                // KaÄŸÄ±dÄ±n sÄ±nÄ±rlarÄ± iÃ§inde kalmasÄ±nÄ± saÄŸla
                newX = Math.max(0, Math.min(newX, paperRect.width - btnRect.width));
                newY = Math.max(0, Math.min(newY, paperRect.height - btnRect.height));
            }
            
            // Transform ile pozisyonu gÃ¼ncelle
            // Ã–nemli: noBtn'in CSS'deki position'Ä± 'relative' olduÄŸu iÃ§in
            // transform ile gÃ¶receli hareket ettirmek daha uygun.
            noBtn.style.transform = `translate(${newX - (btnRect.left - paperRect.left)}px, ${newY - (btnRect.top - paperRect.top)}px)`;

            // GeÃ§iÅŸ sÃ¼resini hÄ±zlandÄ±rarak daha "kaygan" bir etki yarat
            noBtn.style.transition = 'transform 0.1s ease-out';
        });


        // "Evet" butonu tÄ±klama olayÄ±
        yesBtn.addEventListener('click', () => {
            // MesajÄ± gÃ¶ster
            loveMessage.textContent = 'Ben de seni seviyorum ÅŸapÅŸal ğŸ’–';
            loveMessage.classList.add('show');

            // ButonlarÄ± ve soruyu gizle
            paper.querySelector('h2').style.display = 'none';
            yesBtn.style.display = 'none';
            noBtn.style.display = 'none';

            // KaÄŸÄ±dÄ± biraz kÃ¼Ã§Ã¼lt veya ortala (isteÄŸe baÄŸlÄ±)
            paper.style.height = 'auto'; // Ä°Ã§eriÄŸe gÃ¶re yÃ¼kseklik ayarÄ±
            paper.style.padding = '30px';
            // Mesaj gÃ¶rÃ¼ndÃ¼ÄŸÃ¼nde kaÄŸÄ±dÄ±n pozisyonunu biraz daha aÅŸaÄŸÄ±ya alabiliriz
            paper.style.transform = 'translateY(calc(-50% + 50px))';
        });

        // Sayfa yÃ¼klendiÄŸinde butonun pozisyonunu sÄ±fÄ±rla (eÄŸer mouseover sonrasÄ± kalmÄ±ÅŸsa)
        document.addEventListener('DOMContentLoaded', () => {
            // BaÅŸlangÄ±Ã§ta HayÄ±r butonunun transform'Ä±nÄ± sÄ±fÄ±rlÄ±yoruz.
            noBtn.style.transform = 'translate(0, 0)';
            noBtn.style.transition = 'none'; // GeÃ§iÅŸi kapat ki sÄ±fÄ±rlama anÄ±nda animasyon olmasÄ±n
        });
    </script>
